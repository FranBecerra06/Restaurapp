<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #ecf0f1;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controlador.GestionMesasController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Gestión de Mesas" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>

      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
         <children>
            <VBox spacing="5.0">
               <children>
                  <Label text="Capacidad (Personas)" />
                  <TextField fx:id="txtCapacidad" prefWidth="150.0" promptText="Ej. 4" />
               </children>
            </VBox>
            
            <Button mnemonicParsing="false" onAction="#handleAnadir" prefHeight="40.0" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="Añadir Mesa Nueva" textFill="WHITE">
               <VBox.margin>
                  <Insets top="22.0" /> </VBox.margin>
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>

      <Label text="Listado de Mesas Actuales:" textFill="#7f8c8d" />
      
      <ListView fx:id="listaMesas" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
      
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleCambiarEstado" style="-fx-background-color: #e67e22; -fx-cursor: hand;" text="Cambiar Estado (Disponible/Ocupada)" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            
            <Button mnemonicParsing="false" onAction="#handleEliminar" style="-fx-background-color: #c0392b; -fx-cursor: hand;" text="Eliminar Mesa Seleccionada" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>